{
    "name": "tikatonetheme/tika-tone",
    "description": "Un tema moderno y minimalista con estilo Ãºnico.",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Benito Anagua",
            "email": "benito.anagua@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "TikaToneTheme\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs --standard=WordPress src",
        "phpcbf": "phpcbf --standard=WordPress src",
        "test": [
            "@phpstan",
            "@phpcs"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
