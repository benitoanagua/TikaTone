  "scripts": {
    "dev": "vite build",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --write \"src/**/*.{js,ts,html,css}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,ts,html,css}\"",
    "format": "npm run prettier",
    "lint": "eslint . --fix && npm run prettier:check && npm run type-check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:theme": "tsx assets/plugins/material-theme/cli.ts",
    "postinstall": "tsx assets/plugins/material-theme/cli.ts",
    "prebuild": "tsx assets/plugins/material-theme/cli.ts",
    "capture:video": "tsx assets/plugins/storybook-capture/cli.ts video",
    "capture:screenshots": "tsx assets/plugins/storybook-capture/cli.ts screenshots",
    "capture:interactive": "tsx assets/plugins/storybook-capture/cli.ts interactive",
    "capture:demo": "tsx assets/plugins/storybook-capture/cli.ts video -s card overlay stack carousel grille",
    "test": "playwright test",
    "test:dev": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:core": "playwright test tests/components/ tests/integration/",
    "test:quick": "playwright test tests/components/ --grep-invert=\"visual|screenshot\"",
    "test:health": "playwright test tests/diagnostics/",
    "test:ci": "playwright test --reporter=github --workers=4",
    "test:report": "playwright test --reporter=html",
    "test:show-report": "playwright show-report test-results/reports",
    "playwright:install": "playwright install"
  },
  "screenshots": {
    "desktop": "assets/hello-world-thumb.png"
  },
